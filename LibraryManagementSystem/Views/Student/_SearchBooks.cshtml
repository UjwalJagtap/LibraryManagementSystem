@model IEnumerable<LibraryManagementSystem.Models.Book>

<div class="mt-4">
    <h4>Search Books</h4>
    <form method="get" action="@Url.Action("SearchBooks", "Student")" class="row g-3">
        <div class="col-md-4">
            <input type="text" name="query" class="form-control" placeholder="Search by Title, Author, or Genre" required />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table mt-4">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Available Copies</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Genre</td>
                        <td>@book.AvailableCopies</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model != null)
    {
        <p class="text-danger mt-4">No books found.</p>
    }
</div>
