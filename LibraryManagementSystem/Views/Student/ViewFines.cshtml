@model IEnumerable<dynamic>

<div class="container mt-4">
    <h4>Your Pending Fines</h4>
    @if (Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Book Title</th>
                    <th>Fine Amount (INR)</th>
                    <th>Fine Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fine in Model)
                {
                    <tr>
                        <td>@fine.BookTitle</td>
                        <td>@fine.FineAmount</td>
                        <td>@fine.FineDate.ToString("dd MMM yyyy")</td>
                        <td>
                            @if (fine.IsPaid)
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Unpaid</span>
                            }
                        </td>
                        <td>
                            @if (!fine.IsPaid)
                            {
                                <button class="btn btn-primary btn-sm" onclick="payFine(@fine.FineId)">Pay Fine</button>
                            }
                            else
                            {
                                <span class="text-muted">No Actions Available</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">You have no pending fines.</p>
    }
</div>

<script>
    function payFine(fineId) {
        if (!confirm("Are you sure you want to pay this fine?")) return;

        $.ajax({
            url: "/Student/PayFine",
            type: "POST",
            data: { fineId: fineId },
            success: function (response) {
                alert(response.message);
                loadContent('ViewFines'); // Reload fines after payment
            },
            error: function () {
                alert("Error paying fine.");
            }
        });
    }
</script>
