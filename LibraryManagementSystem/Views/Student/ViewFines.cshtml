@model IEnumerable<dynamic>

<div class="container mt-4">
    <h4>Your Fines</h4>

    <div class="table-wrapper">
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Book Title</th>
                        <th>Issue Date</th>
                        <th>Fine Date</th>
                        <th>Fine Amount (₹)</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fine in Model)
                    {
                        <tr>
                            <td>@fine.BookTitle</td>
                            <td>@fine.IssueDate.ToShortDateString()</td>
                            <td>@fine.FineDate.ToShortDateString()</td>
                            <td>₹@fine.FineAmount</td>
                            <td>
                                @if (fine.IsPaid)
                                {
                                    <span class="text-success">Paid (in cash)</span>
                                }
                                else
                                {
                                    <span class="text-danger">Unpaid</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-danger">You have no pending fines.</p>
        }
    </div>
</div>
