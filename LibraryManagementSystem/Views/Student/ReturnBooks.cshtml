@model IEnumerable<LibraryManagementSystem.Models.IssuedBook>

<div class="mt-4">
    <h4>Return Issued Books</h4>
    <p class="text-muted">Select a book to mark as returned.</p>
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Book Title</th>
                    <th>Issue Date</th>
                    <th>Due Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Book.Title</td>
                        <td>@book.IssueDate.ToShortDateString()</td>
                        <td>@book.DueDate.ToShortDateString()</td>
                        <td>
                            <form method="post" action="@Url.Action("ReturnBook", "Student")">
                                <input type="hidden" name="IssuedBookId" value="@book.IssuedBookId" />
                                <button type="submit" class="btn btn-success btn-sm">Return</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">No issued books to return.</p>
    }
</div>
