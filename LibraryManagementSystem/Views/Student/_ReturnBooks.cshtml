@model IEnumerable<LibraryManagementSystem.Models.IssuedBook>

<div>
    <h3>Return Books</h3>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Issue Date</th>
                <th>Due Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issuedBook in Model)
            {
                <tr>
                    <td>@issuedBook.Book.Title</td>
                    <td>@issuedBook.Book.Author</td>
                    <td>@issuedBook.IssueDate.ToString("MM/dd/yyyy")</td>
                    <td>@issuedBook.DueDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        @if (issuedBook.ReturnDate == null)
                        {
                            <button class="btn btn-primary btn-sm" onclick="returnBook(@issuedBook.IssuedBookId)">Return</button>
                        }
                        else
                        {
                            <span class="text-muted">Already Returned</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function returnBook(issuedBookId) {
        $.ajax({
            url: `/Student/ReturnBook/${issuedBookId}`,
            type: "POST",
            success: function () {
                alert("Book returned successfully!");
                location.reload();
            },
            error: function () {
                alert("An error occurred while returning the book.");
            }
        });
    }
</script>
