@model IEnumerable<LibraryManagementSystem.Models.IssuedBook>

<div>
    <h3>Your Issued Books</h3>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Issue Date</th>
                <th>Due Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issuedBook in Model)
            {
                <tr>
                    <td>@issuedBook.Book.Title</td>
                    <td>@issuedBook.Book.Author</td>
                    <td>@issuedBook.IssueDate.ToString("MM/dd/yyyy")</td>
                    <td>@issuedBook.DueDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        @if (issuedBook.ReturnDate == null)
                        {
                            <span class="badge bg-warning text-dark">Not Returned</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Returned</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
