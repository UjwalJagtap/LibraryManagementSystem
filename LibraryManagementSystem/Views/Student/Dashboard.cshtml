    .dashboard-bg {
         background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Similar to admin dashboard box-shadow */
    }

    /* Styling for the main container */
    .container {
        margin-top: 30px;
    }

    .card {
        border-radius: 10px; /* Rounded corners */
    }

    /* Optional: Add some spacing for the welcome message and metrics */
    .welcome-text {
        padding-top: 5px;
        margin-bottom: 20px;
    }

        .welcome-text h1 {
            font-size: 2rem;
        }

        .welcome-text p {
            font-size: 1.2rem;
            margin-top: 10px;
        }

    /* Add some padding and shadow to the navigation panel */
    .nav-item a {
        
        color: #007bff; /* Blue color for the links */
    }

        .nav-item a:hover {
            color: #0056b3; /* Darker blue color on hover */
        }

    /* Card styles to match Admin Dashboard */
    .card {
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Slight shadow */
    }

    /* Adjust card spacing and text style */
    .card-header { 
        font-size: 1.1rem; /* Slightly larger text for header */
    }

    .card-body {
        font-size: 1.2rem;
        padding: 10px;
    }

    /* Adjust button and link colors */
    .nav-link {
        color: #007bff; /* Default link color */
        
    }

        .nav-link:hover {
            color: #0056b3; /* Darker on hover */
        }

    /* Enhance the appearance of the container and columns */
