@{
    ViewData["Title"] = "Student Dashboard";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <!-- White Background div similar to Admin Dashboard (with solid background) -->
    <div class="dashboard-bg">
        <!-- Dashboard Header -->
        <h1 class="text-center mt-4">Student Dashboard</h1>

        <!-- Metrics Section -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3 shadow-sm">
                    <div class="card-header">Total Books</div>
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.TotalBooks</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3 shadow-sm">
                    <div class="card-header">Books Issued</div>
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.BooksIssued</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-danger mb-3 shadow-sm">
                    <div class="card-header">Overdue Fines</div>
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.OverdueFines</h5>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation Panel and Dynamic Content -->
        <div class="row mt-4">
            <!-- Navigation Panel -->
            <div class="col-md-3 border-end">
                <h4>Welcome, @User.Identity.Name</h4>
                <ul class="nav flex-column mt-4">
                    <li class="nav-item mb-2">
                        <a href="#" class="nav-link text-primary" onclick="loadContent('SearchBooks')">Search Books</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="#" class="nav-link text-primary" onclick="loadContent('ViewIssuedBooks')">View Issued Books</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="#" class="nav-link text-primary" onclick="loadContent('ViewFines')">View Fines</a>
                    </li>
                    <!-- Add more links as needed -->
                </ul>
            </div>

            <!-- Dynamic Content Section -->
            <div class="col-md-9" id="content">
                <h4 class="text-center">Select a Functionality</h4>
            </div>
        </div>
    </div>
</div>

<script>
    function loadContent(action) {
        $.ajax({
            url: `/Student/${action}`,
            type: "GET",
            success: function (data) {
                $("#content").html(data);
            },
            error: function () {
                alert("An error occurred while loading the content.");
            }
        });
    }
</script>

<!-- Add the following CSS to match the admin dashboard style -->
