@{
    ViewData["Title"] = "Library Management System";
}

<style>
    body {
        background-image: url('/images/homeBG.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
    }

    .main-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .welcome-text {
        color: black;
        padding-top:5px;
        margin-bottom: 20px;
    }

        .welcome-text h1 {
            font-size: 2.5rem;
            
        }

        .welcome-text p {
            font-size: 1.2rem;
            margin-top: 10px;
        }

    .login-card {
        background: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
        width: 300px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    footer {
        background: transparent;
        text-align: center;
        padding: 10px 0;
        color: #333;
        position: absolute;
        bottom: 0;
        width: 100%;
    }

</style>

<header>
    <!-- Header content is already implemented in _Layout.cshtml -->
</header>

<div class="main-container">
    <!-- Welcome Text -->
    <div class="welcome-text">
        <h1>Welcome To Our Library</h1>
        <p>Access - Organize - Enquire</p>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- Login Form -->
    <div class="login-card">
        <form method="post" action="@Url.Action("Login", "Account")">
            <div class="form-group">
                <label for="username">User Name</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required>
            </div>
            <div class="form-group mt-3">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
            </div>

            <div class="mt-4">
                <label>Select Role:</label>
                <div class="btn-group" role="group">
                    <input type="radio" id="librarian" name="role" value="Librarian" class="btn-check" required>
                    <label class="btn btn-outline-primary" for="librarian">Librarian</label>
                    <input type="radio" id="student" name="role" value="Student" class="btn-check" required>
                    <label class="btn btn-outline-primary" for="student">Student</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-4 w-100">Login</button>
        </form>

        <a href="@Url.Action("Register", "Account")" class="btn btn-secondary mt-3 w-100">Create New Account</a>
    </div>
</div>

