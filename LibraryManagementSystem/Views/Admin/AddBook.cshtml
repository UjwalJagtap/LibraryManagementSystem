@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Add Book";
}

<h2>Add Book</h2>

<form method="post" asp-action="AddBook" asp-controller="Admin">
    <div>
        <label>Title</label>
        <input type="text" asp-for="Title" required />
    </div>

    <div>
        <label>Author</label>
        <input type="text" asp-for="Author" required />
    </div>

    <div>
        <label>Publisher</label>
        <input type="text" asp-for="Publisher" />
    </div>

    <div>
        <label>ISBN</label>
        <input type="text" asp-for="ISBN" required />
    </div>

    <div>
        <label>Published Year</label>
        <input type="number" asp-for="PublishedYear" required />
    </div>

    <div>
        <label>Genre</label>
        <input type="text" asp-for="Genre" required />
    </div>

    <div>
        <label>Total Copies</label>
        <input type="number" asp-for="TotalCopies" required />
    </div>

    <div>
        <label>Available Copies</label>
        <input type="number" asp-for="AvailableCopies" required />
    </div>

    <button type="submit">Add Book</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <p style="color:green;">@TempData["SuccessMessage"]</p>
}
